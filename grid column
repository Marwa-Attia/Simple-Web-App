import {Component, Input,ElementRef,ViewChild,OnInit } from '@angular/core';
import {WFGrid} from './wfGrid.directive';
 
@Component({
  selector: 'column',
  template: `<div #cellTemplate><ng-content></ng-content></div>`,
 
})
export class ColumnComponent implements OnInit {
    @Input() value:string;
    @Input() header:string;
      @ViewChild('cellTemplate') cellTemplate:ElementRef ;
  //  @Input() cellTemplate:
    constructor(table: WFGrid) {
           table.addColumn(this)
       
    }
    
      ngOnInit() {
        console.log("column ngOnInit");
        console.log(this.cellTemplate.nativeElement.innerHTML);
    }
    
}
